{
  "name": "ppamproto2-dev-tools",
  "version": "1.0.0",
  "description": "Development tools for ppamproto2 Flutter project",
  "devDependencies": {
    "playwright": "^1.54.0",
    "@playwright/test": "^1.54.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0"
  },
  "scripts": {
    "setup": "npm install && npx playwright install",
    "dev-setup": "flutter pub get && npm install && npx playwright install",
    "test:web": "npx playwright test",
    "test:flutter": "flutter test",
    "test:integration": "flutter test integration_test/",
    "lint": "eslint .",
    "clean": "flutter clean && npm run setup"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
