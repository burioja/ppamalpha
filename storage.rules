rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 플레이스 이미지 - 모두 읽기 가능, 인증된 사용자만 쓰기 가능
    match /places/{allPaths=**} {
      allow read: if true;  // 누구나 읽기 가능
      allow write: if request.auth != null;  // 인증된 사용자만 쓰기 가능
    }

    // 포스트 이미지 - 모두 읽기 가능, 인증된 사용자만 쓰기 가능
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 사용자 프로필 이미지 - 모두 읽기 가능, 해당 사용자만 쓰기 가능
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 스토어 이미지 - 모두 읽기 가능, 인증된 사용자만 쓰기 가능
    match /stores/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 기타 모든 경로 - 기본적으로 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
